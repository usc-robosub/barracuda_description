<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Macro for the IMU -->
  <xacro:macro name="imu_sensor" params="parent_link imu_name">
    <!-- IMU Link -->
    <link name="${imu_name}_link">
    </link>

    <!-- Fixed Joint to Attach the IMU -->
    <joint name="${imu_name}_joint" type="fixed">
      <parent>${parent_link}</parent>
      <child>${imu_name}_link</child>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <!-- IMU Sensor -->
    <gazebo reference="${imu_name}_link">
      <gravity>true</gravity>
      <sensor name="${imu_name}_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <visualize>true</visualize>
        <topic>imu/data</topic>
        <plugin filename="libgazebo_ros_imu_sensor.so" name="${imu_name}_plugin">
          <topicName>$(arg namespace)/${imu_name}/data</topicName>
          <bodyName>${imu_name}_link</bodyName>
          <updateRateHZ>100.0</updateRateHZ>
          <gaussianNoise>0.0</gaussianNoise>
          <xyzOffset>0 0 0</xyzOffset>
          <rpyOffset>0 0 0</rpyOffset>
          <frameName>${imu_name}_link</frameName>
          <initialOrientationAsReference>false</initialOrientationAsReference>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:macro>

</robot>
